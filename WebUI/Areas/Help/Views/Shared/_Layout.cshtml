@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="renderer" content="webkit" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/Scripts/Bootstrap/v3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Scripts/Bootstrap/v3.3.7/css/docs.css" rel="stylesheet" />
    <link href="~/Scripts/EZX/zapi.site.css?v=20170615" rel="stylesheet" />
    @RenderSection("CustomStyle", required: false)
    <script src="~/Scripts/jQuery/jquery-1.11.3.min.js"></script>
    <script src="~/Scripts/Bootstrap/v3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <header class="navbar navbar-inverse bs-docs-nav" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">帮助|首页</a>
            </div>
            <nav id="nav" class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">接口|API <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("TestApi", "ZApi")">接口列表</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Index", "ZApi")" target="_blank">接口帮助</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">示例|Demo <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Echarts")">Echarts</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Index", "Highcharts")">Highcharts</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Index", "JTree")">jTree + zTree + BootsTree</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container bs-docs-container content-container">
        <p></p>
        <div class="panel panel-default">
            <div class="panel-heading">
                @ViewBag.Title
            </div>
            <div class="panel-body">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer class="container text-center">
        <hr />
        <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序</p>
    </footer>
    <script type="text/javascript">
        $(function () {
            $('#nav').find('li:contains("@ViewBag.Title")').addClass('active');
        });
    </script>
    @RenderSection("CustomScript", false)
</body>
</html>
