@{
    Layout = null;
    ViewBag.Title = "AngularJS.1.6.4";
}
<!DOCTYPE html>
<html data-ng-app="AngularAuthApp">
<head>
    <meta name="keywords" content="angular client oauth" />
    <meta content="IE=edge, chrome=1" http-equiv="X-UA-Compatible" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="description" content="Use AngularJS and Authentication is using BEARER TOKEN,back end built using ASP.NET WEB API 2 and OWIN Framework" />
    <title>@ViewBag.Title</title>
    <link href="~/Scripts/Bootstrap/v3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/ZApi/angularjs.demo.css" rel="stylesheet" />
    <link href="~/Content/CSS/ZApi/loading-bar.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/ZApi/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/ZApi/social-buttons.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation" data-ng-controller="indexController">
        <div class="container">
            <div class="navbar-header">
                <button class="btn btn-success navbar-toggle" data-ng-click="navbarExpanded = !navbarExpanded">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </button>
                <a class="navbar-brand" href="#/">Home</a>
            </div>
            <div class="collapse navbar-collapse" data-collapse="!navbarExpanded">
                <ul class="nav navbar-nav navbar-right">
                    <li data-ng-hide="!authentication.isAuth"><a href="#">Welcome {{authentication.userName}}</a></li>
                    <li data-ng-hide="!authentication.isAuth"><a href="#!/orders">My Orders</a></li>
                    <li data-ng-hide="!authentication.isAuth"><a href="#!/refresh">Refresh Token</a></li>
                    <li data-ng-hide="!authentication.isAuth"><a href="" data-ng-click="logOut()">Logout</a></li>
                    <li data-ng-hide="authentication.isAuth"> <a href="#!/login">Login</a></li>
                    <li data-ng-hide="authentication.isAuth"> <a href="#!/signup">Sign Up</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="jumbotron">
        <div class="container">
            <div class="page-header text-center">
                <h1>AngularJS Authentication</h1>
            </div>
            <p>AngularJS Application which uses OAuth Bearer Token for authentication and implements Refresh Tokens. The backend API is built using ASP.NET Web API 2, OWIN middleware, and ASP.NET Identity.</p>
        </div>
    </div>
    <div class="container">
        <div data-ng-view="">
        </div>
    </div>
    <hr />
    <div id="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="text-muted">Oauth angular client</p>
                </div>
            </div>
        </div>
    </div>
    <!-- 3rd party libraries -->
    <script src="~/Scripts/Angular/v1.6.4/angular.min.js"></script>
    <script src="~/Scripts/Angular/v1.6.4/angular-route.min.js"></script>
    <script src="~/Scripts/Angular.Base64/v2.0.4/angular-base64.min.js"></script>
    <script src="~/Content/Scripts/ZApi/TestAngularJs/angular-local-storage.min.js"></script>
    <script src="~/Content/Scripts/ZApi/TestAngularJs/loading-bar.min.js"></script>
    <!-- Load app main script -->
    <script src="~/Content/Scripts/ZApi/TestAngularJs/app.js"></script>
    <!-- Load services -->
    <script src="~/Content/Scripts/ZApi/TestAngularJs/services/authInterceptorService.js"></script>
    <script src="~/Content/Scripts/ZApi/TestAngularJs/services/authService.js"></script>
    <script src="~/Content/Scripts/ZApi/TestAngularJs/services/ordersService.js"></script>
    <script src="~/Content/Scripts/ZApi/TestAngularJs/services/tokensManagerService.js"></script>
    <!-- Load controllers -->
    <script src="~/Content/Scripts/ZApi/TestAngularJs/controllers/indexController.js"></script>
    <script src="~/Content/Scripts/ZApi/TestAngularJs/controllers/homeController.js"></script>
    <script src="~/Content/Scripts/ZApi/TestAngularJs/controllers/loginController.js"></script>
    <script src="~/Content/Scripts/ZApi/TestAngularJs/controllers/signupController.js"></script>
    <script src="~/Content/Scripts/ZApi/TestAngularJs/controllers/ordersController.js"></script>
    <script src="~/Content/Scripts/ZApi/TestAngularJs/controllers/refreshController.js"></script>
    <script src="~/Content/Scripts/ZApi/TestAngularJs/controllers/tokensManagerController.js"></script>
    <!-- Load custom filters -->
    <!-- Load custom directives -->
</body>
</html>
