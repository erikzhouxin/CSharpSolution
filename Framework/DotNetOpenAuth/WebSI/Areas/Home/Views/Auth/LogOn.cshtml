@model LogOnViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="renderer" content="webkit" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>系统设置中心登录</title>
    <link href="~/Content/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/Scripts/Bootstrap/v3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Scripts/Bootstrap/v3.3.7/css/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/Lib/jquery-1.11.3.min.js"></script>
    <script src="~/Scripts/Bootstrap/v3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <header>
        <div class="container text-center">
            <h1>登录入口</h1>
        </div>
    </header>
    <div class="container text-center">
        <form class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" action="@Url.Action("LogOn")" method="post">
            <div class="form-group text-danger">
                @Html.ValidationMessageFor(m => m.Account)
                @Html.ValidationMessageFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.AuthCode)
                <span id="errorMsg" class="field-validation-error">@TempData[SysContext.TempData_ErrorMsg]</span>
                &nbsp;
            </div>
            <div class="form-group input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                @Html.TextBoxFor(m => m.Account, new { placeholder = "用户名", maxLength = 20, @class = "form-control input-lg" })
            </div>
            <div class="form-group input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                @Html.PasswordFor(m => m.Password, new { placeholder = "密码", maxLength = 20, @class = "form-control input-lg" })
            </div>
            <div class="form-group input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-picture"></span></span>
                @Html.TextBoxFor(m => m.AuthCode, new { placeholder = "验证码", maxLength = 4, @class = "form-control input-lg" })
                <span class="input-group-addon">
                    <img id="imgCode" style="width: 8em; max-height:100%; cursor:pointer;" src="/Auth/VerifyCode" />
                </span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block text-center">登&nbsp;&nbsp;&nbsp;&nbsp;录</button>
            </div>
        </form>
    </div>
    <footer class="container text-center">
        <p class="text-center"><small>&copy;&nbsp;2016.&nbsp;&nbsp;</small><a class="text-info" target="_blank" href="http://www.erikzhouxin.com">XXXXXXXXXXX</a><small>&nbsp;&nbsp;保留所有权利</small></p>
    </footer>
    <script type="text/javascript">
        $(function () {
            $('#imgCode').on('click', function () { $('#imgCode').attr('src', $('#imgCode').attr('src').split('?')[0] + '?time=' + (new Date()).getTime()); });
        });
    </script>
</body>
</html>
